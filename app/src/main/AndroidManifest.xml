<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.gerenciadordedepartamentos">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/document"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/document"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".activity.NewDepartmentActivity"
                android:label="@string/title_activity_new_department"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.NewEmployeeActivity">
        </activity>
        <activity android:name=".activity.EmployeeActivity">
        </activity>
        <activity android:name=".activity.DepartmentActivity">
        </activity>
        <activity android:name=".activity.RegisterActivity">
        </activity>
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>