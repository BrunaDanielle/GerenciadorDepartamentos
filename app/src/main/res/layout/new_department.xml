<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
    >

            <EditText
                    android:id="@+id/dp_name_new"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/dp_name_new"
                    android:inputType="textPersonName|textCapWords"
                    android:digits="abcdefghijklmnopqrstuvxwyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    app:backgroundTint="@color/colorPrimary"
                    android:autofillHints=""/>
    </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
        >

            <EditText
                    android:id="@+id/dp_sigla_new"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/dp_sigla_new"
                    android:inputType="textPersonName|textCapWords"
                    android:digits="abcdefghijklmnopqrstuvxwyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    app:backgroundTint="@color/colorPrimary"
                    android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
        >

            <Button
                    android:id="@+id/btnBackDp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Voltar"
                    android:background="@drawable/button_rounded"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
            />

            <Button
                    android:id="@+id/btn_addDep"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Adicionar"
                    android:background="@drawable/button_rounded"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
            />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
