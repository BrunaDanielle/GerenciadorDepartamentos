<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
    >
    <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-30dp"
    >
        <Button
                android:id="@+id/btn_addPhoto"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="Imagem"
                android:background="@drawable/button_rounded"
                android:textColor="@android:color/white"
                android:textStyle="bold"
        />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
    >

        <EditText
                android:id="@+id/emp_name_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/emp_name_new"
                android:inputType="textPersonName|textCapWords"
                android:digits="abcdefghijklmnopqrstuvxwyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:backgroundTint="@color/colorPrimary"
                android:autofillHints=""/>


    </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
        >

            <EditText
                    android:id="@+id/emp_rg_new"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/emp_rg_new"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:inputType="number|numberDecimal"
                    android:backgroundTint="@color/colorPrimary"
                    android:autofillHints=""/>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
        >

            <Button
                    android:id="@+id/btnBackEmp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Voltar"
                    android:background="@drawable/button_rounded"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
            />

            <Button
                    android:id="@+id/btn_addEmp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Adicionar"
                    android:background="@drawable/button_rounded"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
            />

        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars[15]"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:id="@+id/ivEmp"/>

</RelativeLayout>